<body>
    <nav class="navbar navbar-light light-blue lighten-4">
        <a class="navbar-brand" href="/">
          <img src="/assets/fulllogo.png" alt="Logo" width="50%" height=auto class="d-inline-block align-text-top">
        </a>
      
      </nav>
    <a href="/users/logout"></a>

    <div class="container mt-3 mb-5 d-flex justify-content-center">
        <div class="row">
            <div class="card px-1 py-3">
                <div class="card-body">
                    <h4>⠀⠀⠀⠀⠀⠀⠀⠀Nodal Officers⠀⠀⠀⠀⠀⠀⠀⠀</h4>
                    <div style="display: flex; justify-content: center;">
                        
                        <h7> Updation / Creation</h7>

                    </div>
                    <br>
                        <form class="form" role="form" action="/edit/nodalofficers" method="post">
                        <div class="form-group">
                            <input id="deptname" placeholder="Department Name" class="form-control form-control-sm"
                                type="text" required="" name="deptname">
                        </div>
                        <div class="form-group">
                            <input id="subdept" placeholder="Sub Department" class="form-control form-control-sm"
                                type="text" required="" name="subdept">
                        </div>
                        <div class="form-group">
                            <input id="nodalofficername" placeholder="Nodal Officer Name"
                                class="form-control form-control-sm" type="text" required="" name="nodalofficername">
                        </div>
                        <div class="form-group">
                            <input id="designation" placeholder="Designation" class="form-control form-control-sm"
                                type="text" required="" name="designation">
                        </div>
                        <div class="form-group">
                            <input id="officialmail" placeholder="Official Mail ID" class="form-control form-control-sm"
                                type="text" required="" name="officialmail">
                        </div>
                        <div class="form-group">
                            <input id="mobile" placeholder="Mobile Number" class="form-control form-control-sm"
                                type="text" required="" name="mobile">
                        </div>
                        <div class="form-group">
                            <input id="hod" placeholder="HOD" class="form-control form-control-sm" type="text"
                                required="" name="hod">
                        </div>
                        <div class="form-group">
                            <input id="hodmail" placeholder="HOD mail ID" class="form-control form-control-sm"
                                type="text" required="" name="hodmail">
                        </div>
                        <div class="form-group">
                            <input id="hodphone" placeholder="HOD Phone Number" class="form-control form-control-sm"
                                type="text" required="" name="hodphone">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                        <div style="display: flex; justify-content: center; align-items: center;">
                            <% if (msg === 'Entry in DB is Modified' || msg === 'New Entry is added') { %>
                                <a href="/ItNodalOfficers"><p style="color: green;"><%= msg %></p></a>
                              <% } else { %>
                                <p style="color: red;"><%= msg %></p>
                              <% } %>
                        </div>
                    </form>

                </div>
            </div>

        </div>
</body>

</html>